<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">
   <RelativeLayout
       android:id="@+id/main_line_title"
       android:layout_alignParentTop="true"
       android:layout_width="match_parent"
       android:orientation="horizontal"
       android:background="@color/skyblue"
       android:layout_height="100dp">
        <EditText
            android:id="@+id/ed_search"
            android:layout_marginRight="70dp"
            android:layout_width="match_parent"
            android:background="@drawable/search_edbg"
            android:layout_height="40dp"
            android:textSize="18sp"
            android:paddingLeft="10dp"
            android:drawableLeft="@mipmap/first_search"
            android:drawablePadding="5dp"
            android:hint="请输入你要搜索的应用名称···"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"/>
       <TextView
           android:id="@+id/tv_sure"
           android:layout_alignBaseline="@+id/ed_search"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
           android:layout_marginRight="20dp"
           android:background="@drawable/textcolor"
           android:textColor="@color/white"
           android:textSize="20sp"
           android:text="确定"/>
   </RelativeLayout>
    <View
        android:layout_below="@+id/main_line_title"
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"></View>
    <ListView
        android:id="@+id/main_listView"
        android:layout_below="@+id/view_line"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent"></ListView>
</RelativeLayout>
